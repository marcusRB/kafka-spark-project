{
  "name": "kafka-streamer",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "del ./dist",
    "lint": "tslint --project ./tsconfig.json --fix",
    "build": "tsc",
    "test": "jest",
    "server": "node ./dist/index.js",
    "build:dev": "tsc --watch",
    "lint:dev": "chokidar ./**/*.ts --initial --silent -c 'npm -s run lint'",
    "test:dev": "CI=true jest --watch",
    "server:dev": "nodemon -w ./ -x npm run server",
    "dev": "concurrently --names 'BUILD,TEST,LINT,SERVER' -c 'yello,cyan,blue,magenta' 'npm run build:dev' 'npm run test:dev' 'npm run lint:dev' 'npm run server:dev'",
    "start": "npm run clean && npm run lint && npm run build && npm run server"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "kafka-node": "^2.4.1"
  },
  "devDependencies": {
    "@types/kafka-node": "^2.0.6",
    "chokidar": "^2.0.3",
    "concurrently": "^3.5.1",
    "del": "^3.0.0",
    "jest": "^22.4.3",
    "nodemon": "^1.17.3",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "typescript": "^2.8.1"
  }
}
